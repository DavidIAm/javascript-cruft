<!DOCTYPE html>
<html>
  <head>
    <title>Typing Text Automagically</title>
    <style type="text/css">
    </style>
    <script type="text/javascript">
      var myOptions = {
	  "defCharDelay": 1000,
	  "outputPlace": "outputBox"
	  "outputText": "Twas brillig, and the slithy toves\nDid gyre and gimble in the wabe;\nAll mimsy were the borogoves,\nAnd the mome raths outgrabe.";
      };

      function startOutput() {
	  var work = myOptions['outputText'].split("");
	  for( i = 0; i < work.length; i++ ) {
	      elem = document.getElementById( myOptions['outputPlace'] );
	      cto = i*myOptions['defCharDelay'];
	      cur = work.shift();
	      if( cur == '\n' ) {
		  setTimeout( elem.appendChild( document.createElement("br") ), cto );
	      } else {
		  setTimeout( elem.appendChild( document.createTextNode(cur) ), cto );
	      }
	  }
      };
    </script>
    <script type="text/javascript">
      if( document.addEventListener ) { // IE9+, other DOM3 compliant browsers
	  document.addEventListener('load', startOutput, false);
      } else if( document.attachEvent ) { // pre-IE9 MS browsers
	  document.attachEvent( 'onload', startOutput );
      } else { // ancient browsers
	  window.onload = function () { startOutput(); };
      }
    </script>
  </head>
  <body>
    <div id="outputBox">
    </div>
  </body>
</html>
